<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regisrerbk"
    tools:context=".RegisterActivity">

    <ImageView

        android:id="@+id/register_app_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"

        android:foregroundGravity="center"
        android:src="@drawable/applogo" />

    <EditText
        android:id="@+id/register_username_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_app_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-29dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_design"
        android:hint="@string/your_names"

        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_email_txt"
        android:layout_width="match_parent"
        android:layout_below="@+id/register_username_txt"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:layout_marginLeft="15dp"
        android:hint="Your Mail  Id"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/register_password_txt"
        android:layout_width="match_parent"
        android:layout_below="@+id/register_email_txt"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_marginLeft="15dp"
        android:hint="@string/your_passworda"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_txt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:text="@string/create_an_account"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/goto_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_btn"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:text="@string/already_have_an_account_login"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textStyle="italic" />

</RelativeLayout>